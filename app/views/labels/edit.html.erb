<%= form_with(model: @label , local: true) do |form| %>

  <% if @label.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@label.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @label.errors.each do |error| %>
          <li><%= error.full_message %></li>
