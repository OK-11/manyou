


<h1><%= t(".Tasks Index") %></h1>

<%= render "search" %>

<table>
  <thead>
    <tr>
      <th><%= t(".Title") %></th>
      <th><%= t(".Content") %></th>
      <th><%= t(".Created_at") %></th>
      <th><%= link_to "終了期限", sort_deadline_on: true %></th>
      <th><%= link_to "優先度", sort_priority: true %></th>
      <th>ステータス</th>

    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td class="task_title"><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.created_at.strftime("%Y/%m/%d %H:%M") %></td>
        <td><%= task.deadline_on %></td>
        <td><%= task.priority %></td>
        <td><%= task.status %></td>
        <td><%= link_to t(".Show") , task_path(task), class: "show-task" %></td>
        <td><%= link_to t(".Edit") , edit_task_path(task), class: "edit-task" %></td>
        <td><%= link_to t(".Destroy") , task_path(task), class: "destroy-task" , method: :delete , data: { confirm: t(".Are you sure?") }%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @tasks %>