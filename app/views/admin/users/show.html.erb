<h1>ユーザ詳細ページ</h1>

<div><label>名前:</label><%= @user.name %></div>
<div><label>メールアドレス:</label><%= @user.email %></div>
<div>
  <label>管理者権限:</label>
  <% if @user.admin == true %>
    <p>あり</p>
  <% else %>
    <p>なし</p>
  <% end %>
</div>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>内容</th>
      <th>作成日時</th>
      <th>終了期限</th>
      <th>優先度</th>
      <th>ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.created_at %></td>
        <td><%= task.deadline_on %></td>
        <td><%= task.priority %></td>
        <td><%= task.status %></td> 
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "戻る" , admin_users_path , id: "back" %>
