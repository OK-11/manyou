<%= form_with(scope: :session, url: sessions_path, local: true) do |form| %>

  <div><%= form.label :email , "メールアドレス" , class: "form-label" %></div>
  <div><%= form.text_field :email , class: "form-control" %></div>

  <div><%= form.label :password , "パスワード" , class: "form-label" %></div>
  <div><%= form.text_field :password , class: "form-control" %></div>

  <%= form.submit "ログイン" , id: "create-session" , class: "btn btn-primary" %>


<% end %>